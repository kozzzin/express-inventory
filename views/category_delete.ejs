<%- include('header') %>
    <h1 class="title is-1 mt-5 uppercase">
      <%= title || `Delete: ${body.name}` %>
    </h1>

    <% if (post && !!fail) { %>
      <% var showForm = true; %>
      <p class="subtitle is-3 red">Error ocurred: <%= fail %></p>
    <% } else if (post && !fail) { %>
      <% var showForm = false; %>
      <p class="subtitle is-3 is-primary">Deleted succesfully: <%= body.name %></p>
    <% } else {%>
      <% var showForm = true; %>
      <p class="subtitle is-3">Delete category</p>
    <% } %>

      <%
        const action = `/category/${body._id}/delete`;
      %>
    
      <% if (showForm) { %>
        <form class="width-500" action="<%= action %>" method="post">
          <input type="hidden" name="_id" value="<%= body._id %>">
          <div class="field">
            <label class="label">To delete need password:</label>
            <div class="control">
              <input required class="input" type="password" name="password" placeholder="admin password" />
            </div>
          </div>
          <input class="button is-danger" type="submit" value="Submit" />
        </form>
      <% } %>


<%- include('footer') %>